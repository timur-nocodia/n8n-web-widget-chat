{
  "_comment": "This is an example configuration file for the chat widget. Copy this to widget-config.json and customize as needed.",
  
  "api": {
    "_comment": "API configuration for backend communication",
    "baseUrl": "https://your-api-server.com",
    "endpoints": {
      "session": "/api/v1/session/create",
      "chat": "/api/v1/chat/stream"
    }
  },
  
  "appearance": {
    "_comment": "Visual customization options",
    "position": "bottom-right",
    "theme": {
      "_comment": "Color scheme and visual theme",
      "primaryColor": "#667eea",
