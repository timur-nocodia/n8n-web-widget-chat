      "primaryGradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "bgDark": "rgba(30, 30, 46, 0.95)",
      "bgGlass": "rgba(255, 255, 255, 0.1)",
      "textLight": "#ffffff",
      "textDark": "#2d3748",
      "borderRadius": "16px",
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "dimensions": {
      "_comment": "Size and positioning",
      "width": "380px",
      "height": "600px",
      "mobileWidth": "calc(100vw - 40px)",
      "mobileHeight": "calc(100vh - 40px)",
      "buttonSize": "60px",
      "bottomOffset": "20px",
      "rightOffset": "20px"
    }
  },
  
